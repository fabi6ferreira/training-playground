pipeline {
    agent none
    stages {
        stage('mvn') {
            agent {
                dockerfile {
                    filename '04 - Jenkinsfile - Dockerfile Agent'
                    dir '003 - Defining Execution Environments'
                }
            }
            steps {
                sh 'mvn --version'
            }
        }
        stage('npm') {
            agent {
                dockerfile {
                    filename '04 - Dockerfile - Install Software Dockerfile Node'
                    dir '003 - Defining Execution Environments'
                }
            }
            steps {
                sh 'npm --version'
            }
        }
    }
}
